<Window x:Class="Perso_Bank.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Perso_Bank"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <Label Content="Login Name" HorizontalAlignment="Left" Height="23" Margin="281,179,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="23" Margin="281,212,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Left" Margin="381,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTD" HorizontalAlignment="Left" Margin="381,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="281,261,0,0" VerticalAlignment="Top" Width="220" Height="31" Click="Button_Click"/>

    </Grid>
</Window>
